{
  "name": "locoapp",
  "version": "1.0.0",
  "description": "App for LocoNJU using electron.",
  "main": "src/main.js",
  "scripts": {
    "make": "electron-forge make",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Tilt",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "electron": "^25.0.1",
    "electron-prebuilt-compile": "8.2.0"
  },
  "dependencies": {
    "electron-compile": "^6.4.4",
    "electron-updater": "^5.3.0"
  },
  "build": {
    "productName": "LocoApp",
    "appId": "com.emit7355608.locoapp",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "zip",
        "msi"
      ],
      "arch": [
        "arm64",
        "x64"
      ]
    },
    "icon": "assets/icon.ico"
  },
  "config": {
    "forge": {
      "entryPoints": [
        "src/main.js"
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "locoapp",
            "iconUrl": "./assets/icon.ico",
            "remoteReleases": "https://github.com/emit7355608/locoapp/releases"
          }
        }
      ]
    }
  }
}
